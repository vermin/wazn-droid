<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_body">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="90dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/walletaddress2"
                        android:textColor="@color/txt_headline"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnMineWazn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:backgroundTint="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/c_grey"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/TextErrorStyle"
                    app:errorEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnQrCode"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/bg_lighter"
                        android:text="@string/scanqrcode"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textColor="@color/txt_button_filled"
                        app:icon="@drawable/ic_qrcode"
                        app:iconGravity="textStart"
                        app:iconSize="18dp"
                        app:iconTint="@color/btn_icon_default"
                        app:cornerRadius="5dp"
                        tools:ignore="ButtonStyle,UnusedAttribute" />

                    <Button
                        android:id="@+id/btnPasteAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/bg_lighter"
                        android:text="@string/paste"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textColor="@color/txt_button_filled"
                        app:icon="@drawable/ic_paste"
                        app:iconGravity="textStart"
                        app:iconSize="18dp"
                        app:iconTint="@color/btn_icon_default"
                        app:cornerRadius="5dp"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="start"
                    android:text="@string/pool"
                    android:textColor="@color/txt_headline"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <io.wazn.androidminer.widgets.PoolView
                    android:id="@+id/viewPool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:text="@string/pooloptions"
                    android:textColor="@color/txt_headline"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameparameters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/usernameparametershint"
                        android:textColor="@color/txt_main"
                        android:textColorHint="@color/txt_inactive"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/workername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/workernamehint"
                        android:textColor="@color/txt_main"
                        android:textColorHint="@color/txt_inactive"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="start"
                    android:text="@string/intensity"
                    android:textColor="@color/txt_headline"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cpu_cores"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/coresnb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:text="1"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:text="/"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/coresmax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbarcores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="7"
                    android:maxHeight="5dp"
                    android:min="0"
                    android:minHeight="5dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progress="4"
                    android:progressDrawable="@drawable/seekbar_ruler_yellow"
                    android:thumbTint="@color/c_white"
                    android:thumbOffset="0dp"
                    tools:ignore="UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:text="@string/temperature_control"
                        android:textColor="@color/txt_headline"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnTemperatureControlHelp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/ic_help"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/txt_main"
                        android:visibility="visible"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:text="@string/cputemperature"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:text="@string/max"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cpumaxtemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:text="#"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/cputempunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/degreecelsius"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbarcputemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:maxHeight="5dp"
                    android:min="0"
                    android:minHeight="5dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progress="3"
                    android:progressDrawable="@drawable/seekbar_ruler_blue"
                    android:thumbTint="@color/c_white"
                    android:thumbOffset="0dp"
                    tools:ignore="UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:text="@string/batterytemperature"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:text="@string/max"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/batterymaxtemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:text="#"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/batterytempunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/degreecelsius"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbarbatterytemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:maxHeight="5dp"
                    android:min="0"
                    android:minHeight="5dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progress="3"
                    android:progressDrawable="@drawable/seekbar_ruler_blue"
                    android:thumbTint="@color/c_white"
                    android:thumbOffset="0dp"
                    tools:ignore="UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:text="@string/cooldownthreshold"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:text="-"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/cooldownthreshold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:text="#"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="%"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbarcooldownthreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:maxHeight="5dp"
                    android:min="0"
                    android:minHeight="5dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progress="3"
                    android:progressDrawable="@drawable/seekbar_ruler_blue"
                    android:thumbTint="@color/c_white"
                    android:thumbOffset="0dp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2.5dp"
                    android:gravity="start"
                    android:text="@string/pooloptions"
                    android:textColor="@color/txt_headline"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature_unit"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        android:checked="false" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/tgTemperatureUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:checkedButton="@id/btnCelsius">

                        <Button
                            android:id="@+id/btnCelsius"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="@string/celsius"
                            style="?attr/materialButtonOutlinedStyle" />

                        <Button
                            android:id="@+id/btnFarehnheit"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="@string/fahrenheit"
                            style="?attr/materialButtonOutlinedStyle" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/turnoffamayccontrol"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        android:checked="false" />

                    <Button
                        android:id="@+id/btnAmaycWarning"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/ic_warning"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/c_yellow"
                        tools:ignore="UnusedAttribute" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:id="@+id/chkAmaycOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="start"
                    android:text="@string/advanced"
                    android:textColor="@color/txt_headline"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hashrate_refresh_delay"
                        android:textColor="@color/c_grey"
                        android:textSize="14sp"
                        android:checked="false"
                        app:buttonTint="@color/txt_main" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivDecreaseRefreshHashrateDelay"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            app:tint="@color/c_blue"
                            app:srcCompat="@drawable/ic_left" />

                        <TextView
                            android:id="@+id/tvRefreshHashrateDelay"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="30"
                            android:textColor="@color/txt_main"
                            android:textSize="14sp"
                            android:checked="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="s"
                            android:textColor="@color/txt_main"
                            android:textSize="14sp"
                            android:checked="false" />

                        <ImageView
                            android:id="@+id/ivIncreaseRefreshHashrateDelay"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            app:tint="@color/c_blue"
                            app:srcCompat="@drawable/ic_right" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pauseminingonbattery"
                        android:textColor="@color/c_grey"
                        android:textSize="14sp"
                        android:checked="false"
                        app:buttonTint="@color/txt_main" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:id="@+id/chkPauseOnBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pauseminingonmobile"
                        android:textColor="@color/c_grey"
                        android:textSize="14sp"
                        android:checked="false"
                        app:buttonTint="@color/txt_main" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:id="@+id/chkPauseOnNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/keepscreenonwhenmining"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        android:checked="false" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:id="@+id/chkKeepScreenOnWhenMining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/send_debug_information"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        android:checked="false" />

                    <Button
                        android:id="@+id/btnSendDebugInformationHelp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/ic_help"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/txt_main"
                        android:visibility="visible"
                        tools:ignore="UnusedAttribute" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:id="@+id/chkSendDebugInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/disable_restart_process"
                        android:textColor="@color/txt_main"
                        android:textSize="14sp"
                        android:checked="false" />

                    <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/ic_help"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/txt_main"
                        android:visibility="visible"
                        tools:ignore="UnusedAttribute" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/txt_inactive"
                    android:visibility="gone"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/saveSettings"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            app:backgroundTint="@color/bg_blue"
            android:text="@string/save"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/txt_button_filled"
            app:cornerRadius="5dp"
            tools:ignore="TooManyViews,UnusedAttribute" />

    </RelativeLayout>

</RelativeLayout>